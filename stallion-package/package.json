{
  "name": "@clinikally/airship-cli",
  "version": "1.1.3",
  "description": "CLI tool for self-hosted OTA deployments with Airship",
  "main": "index.js",
  "bin": { "airship": "index.js" },
  "scripts": {
    "start": "ts-node -r tsconfig-paths/register src/index.ts",
    "build": "rimraf ./dist && tsc && tsc-alias",
    "prep-release": "node scripts/prep-release.js",
    "pre-release-patch": "npm version prerelease --preid=alpha -f",
    "prepare-release": "npm run build && npm run prep-release",
    "prepare-release-dev": "pnpm run build && cross-env NODE_ENV=development pnpm run prep-release"
  },
  "keywords": [
    "cli",
    "airship",
    "ota",
    "react-native",
    "typescript",
    "commander"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/clinikally/airship-cli.git"
  },
  "author": "Clinikally Development Team",
  "license": "MIT",
  "homepage": "https://clinikally.com/",
  "publishConfig": { "registry": "https://npm.pkg.github.com" },
  "packageManager": "pnpm@10.11.0",
  "dependencies": {
    "archiver": "^7.0.1",
    "axios": "^1.9.0",
    "chalk": "^4.1.2",
    "commander": "^13.1.0",
    "figlet": "^1.7.0",
    "gradient-string": "^2.0.2",
    "inquirer": "^12.6.1",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "mime": "^3.0.0",
    "opener": "^1.5.2",
    "ora": "^5.4.1",
    "reflect-metadata": "^0.2.2",
    "rimraf": "^6.0.1",
    "semver": "^7.7.2"
  },
  "release": {
    "branches": ["main", { "name": "alpha", "prerelease": true }],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      "@semantic-release/changelog",
      ["@semantic-release/npm", { "pkgRoot": "stallion-package" }],
      "@semantic-release/github",
      [
        "@semantic-release/git",
        {
          "assets": ["CHANGELOG.md", "package.json"],
          "message": "chore(release): ${nextRelease.version}"
        }
      ]
    ]
  }
}
